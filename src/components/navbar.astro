<nav class="flex-column" aria-label="Menú principal">
  <i class="bi bi-list open-nav" aria-label="Abrir menú"></i>

  <div class="flex-column" id="overlay">
    <a href="/">Inicio</a>
    <a href="#servicios" class="internal-link">Servicios</a>
    <a href="/planeta_hogar">Planeta hogar</a>
    <a href="/reporte">Reporte</a>
    <a href="/clientes">clientes</a>
    <i class="bi bi-x-lg close-nav" aria-label="Cerrar menú"></i>
  </div>
</nav>

<style>
  .open-nav {
    font-size: 20px;
    cursor: pointer;
    background-color: #fff;
    border: solid 1px #dcdcdc;
    border-radius: 12px;
    padding: 11.2px;
    cursor: pointer;
  }

  #overlay {
    display: none;
    position: fixed;
    inset: 0;
    gap: 7%;
    background: var(--clr-white);
    z-index: 100;
  }

  #overlay.new-nav {
    display: flex;
  }

  .close-nav {
    position: absolute;
    top: 0;
    right: 0;
    margin: 28px;
    font-size: 24px;
    cursor: pointer;
    border-radius: 10px;
    padding: 7px;
    background: #fff;
    color: var(--clr-dark);
    border: solid 1px var(--clr-gray);
  }

  #overlay a {
    font-size: 18px;
    background: #fff;
    padding: 10px 17px;
    border: solid 1px var(--clr-gray);
    border-radius: 12px;
    letter-spacing: 7px;
    width: 210px;
    text-align: center;
    text-transform: uppercase;
    color: var(--clr-dark);
    line-height: normal;
  }

  /* Desktop */
  @media (min-width: 768px) {
    .open-nav,
    .close-nav {
      display: none;
    }
    #overlay {
      display: flex;
      position: relative;
      inset: auto;
      flex-direction: row;
      width: auto;
      height: auto;
      gap: 7px;
      backdrop-filter: none;
      background: transparent;
    }
    #overlay a {
      font-size: 14px;
      letter-spacing: 0;
      width: auto;
      transition: 0.2s ease;
    }

    #overlay a:hover {
      background-color: #dcdcdc;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const overlay = document.getElementById("overlay");
    const openBtn = document.querySelector(".open-nav");
    const closeBtn = document.querySelector(".close-nav");
    const allLinks = overlay?.querySelectorAll("a");

    const open = () => {
      if (overlay) {
        overlay.style.display = "flex";
      }
    };

    const close = () => {
      if (overlay) overlay.style.display = "none";
    };

    openBtn?.addEventListener("click", open);
    closeBtn?.addEventListener("click", close);

    // Cerrar menú al hacer clic en cualquier enlace (en móvil)
    allLinks?.forEach((link) => {
      link.addEventListener("click", (e) => {
        // Si es un enlace interno (#servicios), verificar si la sección existe
        if (link.classList.contains("internal-link")) {
          const targetId = link.getAttribute("href").substring(1); // Quitar el #
          const targetSection = document.getElementById(targetId);

          if (!targetSection) {
            // La sección no existe, redirigir a la página principal (móvil y desktop)
            e.preventDefault();
            window.location.href = "/#" + targetId;
            return;
          }

          // La sección existe, cerrar el menú solo en móvil
          if (window.innerWidth < 700) {
            close();
          }
        } else {
          // Es un enlace normal, cerrar el menú solo en móvil
          if (window.innerWidth < 700) {
            close();
          }
        }
      });
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") close();
    });
  });
</script>
