---
import Layout1 from "../layouts/Layout1.astro";

import Hero from "../sections/Hero.astro";
import Section1 from "../sections/Section1.astro";
import Section2 from "../sections/Section2.astro";
import MisionVision from "../sections/Mision-vision.astro";
---

<Layout1 title="HC Company S.A.S">
	<Hero />

	<section id="nosotros" class="flex-column">
		<h1>SERVICIO ESPECIALIZADO PARA EQUIPOS DE LABORATORIO</h1>
		<p>
			Nuestros esfuerzos están encaminados a satisfacer las necesidades de
			mantenimiento preventivo, correctivo, predictivo, ajuste y calificación y
			a alargar la vida útil de los equipos.
		</p>
		<p>
			Contamos con experiencia, conocimiento y recurso físico y humano, que nos
			permiten ofrecer un servicio integral, profesional y empático con los
			requerimientos e intereses de nuestros clientes.
		</p>
	</section>

	<a></a>

	<section id="servicios" class="flex-column">
		<h1>nuestros servicios</h1>
		<div class="flex-row">
			<a class="service-card flex-column" href="/servicios/mantenimiento">
				<img
					src="/img/servicios/mantenimiento.jpg"
					alt="MANTENIMIENTO PREVENTIVO - CORRECTIVO PREDICTIVO"
				/>
				<h4>MANTENIMIENTO PREVENTIVO - CORRECTIVO PREDICTIVO</h4>
			</a>
			<a class="service-card flex-column" href="/servicios/automatizacion">
				<img
					src="/img/servicios/automatizacion.jpg"
					alt="AUTOMATIZACIÓN - RESTAURACIÓN ADAPTACIÓN - FÁBRICA - ASESORÍA"
				/>
				<h4>AUTOMATIZACIÓN - RESTAURACIÓN ADAPTACIÓN - FÁBRICA - ASESORÍA</h4>
			</a>
			<a class="service-card flex-column" href="">
				<img src="/img/servicios/calificacion.jpg" alt="CALIFICACIÓN" />
				<h4>CALIFICACIÓN</h4>
			</a>
		</div>
	</section>

	<!-- <MisionVision /> -->

	<section id="equipos">
		<div class="flex-column">
			<h2>+5.500</h2>
			<p>EQUIPOS INTERVENIDOS</p>
		</div>
	</section>
</Layout1>

<style>
	#nosotros {
		text-align: center;
		background-color: #fff;
		gap: 10px;
	}

	h1 {
		font-size: 1.5rem;
		line-height: normal;
		/* margin-bottom: 10px; */
	}

	#servicios > div {
		flex-wrap: wrap;
		gap: 15px;
		align-items: stretch;
		width: 100%;
	}

	#servicios .service-card {
		background-color: #fff;
		width: 100%;
		max-width: 300px;
		border-radius: 10px;
		text-align: center;
		overflow: hidden;
		transition: var(--transition);
		border: solid 1px transparent;
	}

	#servicios .service-card:hover {
		border: solid 1px var(--clr-gray);
	}

	#servicios .service-card img {
		width: 100%;
		height: 180px;
		object-fit: cover;
		margin-bottom: auto;
	}

	#servicios .service-card h4 {
		padding: 10px 15px;
		text-align: center;
		margin-bottom: auto;
		color: var(--clr-dark2);
		font-size: 0.88rem;
	}

	#equipos {
		background-color: #fff;
	}

	#equipos h2 {
		font-size: 3rem;
		margin-bottom: 0px;
	}

	@media (min-width: 768px) {
		h1 {
			font-size: 2rem;
		}
	}
</style>
